{
    "name": "my_first_model",
    "input": {
        "task": "avmovie"
    },
    "description": "My first BIDS-like GLM: Reanalysis",
    "blocks": [
        {
            "level": "run",
            "transformations": [
                {
                    "name": "factor",
                    "input": ["trial_type"]
                }
                    ],
            "model": {
                "model_type": "glm",
                "HRF_variables": [
                    "trial_type.LEFT",
                    "trial_type.RIGHT",
                    "trial_type.UP",
                    "trial_type.DOWN",
                    "trial_type.PD",
                    "trial_type.RMS",
                    "trial_type.LRDIFF"
                ],
                "variables": [
                    "trial_type.LEFT",
                    "trial_type.RIGHT",
                    "trial_type.UP",
                    "trial_type.DOWN",
                    "trial_type.PD",
                    "trial_type.RMS",
                    "trial_type.LRDIFF"
                ],
                "options": {
                    "high_pass_filter_cutoff_secs": 50,
                    "confounds": ["desc-mcparams_motion.tsv"]
                },
                "software": {
                    "FSL": {
                        "HRF_type": "dgamma",
                        "whitening": "FILM"}
                }
            },
            "contrasts": [
            {
                "name": "t-test_left-right",
                "condition_list": [
                   "trial_type.LEFT",
                   "trial_type.RIGHT"],
                "weights":[
                    1,
                    -1
                ],
                "type":"t"
            },
            {
                "name": "t-test_up-down",
                "condition_list": ["trial_type.UP", "trial_type.DOWN"],
                "weights": [
                    1,
                    -1
                ],
                "type": "t"
            },
            {
                "name": "t-test_hor-ver",
                "condition_list": ["trial_type.LEFT", "trial_type.RIGHT",
                "trial_type.UP", "trial_type.DOWN"],
                "weights": [
                    1,
                    1,
                    -1,
                    -1
                ],
                "type": "t"
                }
            ]
        },
        {
            "level": "subject",
            "model": {
                "model_type": "glm",
                "variances": [
                    {
                        "name": "within_run_var",
                        "groupBy": "run"
                    }
                ]
            }
        },
        {
            "level": "dataset",
            "model": {
                "model_type": "glm",
                "variances": [
                    {
                        "name": "within_subject_var",
                        "groupBy": "subject"
                    }
                ],
                "variables": [
                    "t-test_left-right",
                    "t-test_up-down",
                    "t-test_hor-ver"
                ]
            }
        }
    ]
}










